@model PBL3_2.Models.BienLai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Receipt</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Account Payer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.ACCOUNT_NAME)
        </dd>

        <dt>
            Cost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BIENLAI_PAYMENT)
        </dd>

        <dt>
            Begin day
        </dt>

        <dd>
            @Model.BIENLAI_START.Value.Month/@Model.BIENLAI_START.Value.Day/@Model.BIENLAI_START.Value.Year
        </dd>

        <dt>
            End day
        </dt>

        <dd>
            @Model.BIENLAI_END.Value.Month/@Model.BIENLAI_END.Value.Day/@Model.BIENLAI_END.Value.Year
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
