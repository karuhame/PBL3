@model List<PBL3_2.Models.PhienTap>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    for (int i = 0; i < (int)((PBL3_2.Models.Lop)ViewData["lop"]).LOP_NUMBERSESSION; i++)
    {
        <div class="form-horizontal">
            <h4>Session @(i+1)</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model[i].AYATE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model[i].PHIENTAP_DATE, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model[i].PHIENTAP_DATE, "", new { @class = "text-danger" })
                    </div>*@
                <b class="control-label col-md-2">
                    Date
                </b>
                <div class="col-md-4">

                    @Html.DropDownList("Date", ViewBag.TKB as SelectList)
                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-2">
                    Start
                </b>
                <div class="col-md-4">
                    @Html.EditorFor(model => model[i].PHIENTAP_startt, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                    @Html.ValidationMessageFor(model => model[i].PHIENTAP_startt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-2">
                    End
                </b>
                <div class="col-md-4">
                    @Html.EditorFor(model => model[i].PHIENTAP_endd, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                    @Html.ValidationMessageFor(model => model[i].PHIENTAP_endd, "", new { @class = "text-danger" })
                </div>
            </div>



        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" name="sub" class="btn btn-default" />
            <input type="submit" value="Cancel" name="sub" class="btn btn-default" />
        </div>


    </div>


}

