@model List<PBL3_2.Models.PhienTap>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    for (int i = 0; i < (int)((PBL3_2.Models.Lop)ViewData["lop"]).LOP_NUMBERSESSION; i++)
    {
        <div class="form-horizontal">
            <h4>PhienTap</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model[i].PHIENTAP_DAY, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].PHIENTAP_DAY, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model[i].PHIENTAP_DAY, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].PHIENTAP_START, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].PHIENTAP_START, new { htmlAttributes = new { @class = "form-control", type = "int" } })
                    @Html.ValidationMessageFor(model => model[i].PHIENTAP_START, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].PHIENTAP_END, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].PHIENTAP_END, new { htmlAttributes = new { @class = "form-control", type = "int" } })
                    @Html.ValidationMessageFor(model => model[i].PHIENTAP_END, "", new { @class = "text-danger" })
                </div>
            </div>



        </div>
    }
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" name="sub" class="btn btn-default" />
    </div>

    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Cancel" name="sub" class="btn btn-default" />
    </div>

</div>


}

<div>
    @Html.ActionLink("Back to List", "About", "Home")
</div>
