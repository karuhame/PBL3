@model PBL3_2.Models.LoaiGoi

@{
    ViewBag.Title = "Edit Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-bottom: 50px; margin-top: 50px;">
    <h2 style="color: green;">@ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.GOI_ID)

    <div class="form-group">
        <label class="control-label col-md-2">Membership Type</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.GOI_TYPE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GOI_TYPE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Membership Fee</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.GOI_FEE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GOI_FEE, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Max Customer Number</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.GOI_MAX_CUSTOMER, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GOI_MAX_CUSTOMER, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">PT Required</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GOI_PT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GOI_PT, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
