@model PBL3_2.Models.Lop
@{
    ViewBag.Title = "Create Class Without PT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom: 50px; margin-top: 50px;">
    <h2 style="color: green;">@ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Membership Type</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.GOI_ID, ViewBag.loai as SelectList)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Start</label>
            <div class="col-md-4">
                <input class="form-control" name="LOP_START" type="date" />
                @Html.ValidationMessageFor(model => model.LOP_START, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">End</label>
            <div class="col-md-4">
                <input class="form-control" name="LOP_END" type="date" />
                @Html.ValidationMessageFor(model => model.LOP_END, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
